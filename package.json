{
    "name": "typescript-hapi-base",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "npm-run-all clean:ts build:ts copy-static-files",
        "start": "node ./.dist/index.js",
        "start:dev": "nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.spec.ts\" --exec \"ts-node src/index.ts\"",
        "build:ts": "tsc --build",
        "clean:ts": "tsc --build --clean",
        "copy-static-files": "cpx -C \"src/**/*.json\" \".dist\""
    },
    "author": "bmarchbank",
    "license": "MIT",
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/hapi-pino": "^8.0.1",
        "@types/hapi__hapi": "^20.0.8",
        "@types/hapi__inert": "^5.2.2",
        "@types/hapi__vision": "^5.5.2",
        "@types/lodash": "^4.14.170",
        "@types/node": "^14.17.2",
        "cpx": "^1.5.0",
        "nodemon": "^2.0.7",
        "npm-run-all": "^4.1.5",
        "ts-node": "^10.0.0",
        "tslib": "^2.2.0",
        "typescript": "^4.3.2"
    },
    "dependencies": {
        "@hapi/hapi": "^20.1.3",
        "@hapi/inert": "^6.0.3",
        "@hapi/vision": "^6.1.0",
        "dotenv": "^10.0.0",
        "glob": "^7.1.7",
        "hapi-pino": "^8.3.0",
        "hapi-swagger": "^14.1.3",
        "joi": "^17.4.0",
        "lodash": "^4.17.21"
    }
}
